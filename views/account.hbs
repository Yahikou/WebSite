<h1>PROFILE</h1>
<div class="card" style=" float:left; margin-left: 2rem; width: 590px; height: 394px; text-align: center;">
  <div class="card-body" style="">
    <img src="http://localhost:5000/{{One.image}}" alt="123" style="margin-top: 20px; border-radius: 90%;">
    <h1 class="card-title">{{One.username}}</h1>
    <h2 class="card-subtitle mb-2 text-muted">{{One.email}}</h2>
  </div>
</div>

<div class="card" style="float:left; margin-left: 3rem;  width: 1024px; height: 550px">
  <div class="card-body">
    <!--TABS-->
    <ul class="nav nav-tabs nav-tabs-bordered">
      <li class="nav-item">
      <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Информация</button>
      </li>
      <li class="nav-item">
      <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-man">Изменить</button>
      </li>
    <!--TABS-->
    </ul>
    <div class="tab-content">
    <div class="tab-pane fade profile-overview active show" id="profile-overview">
        <h5 class="card-title">Profile Details</h5>
                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                    <div class="col-lg-9 col-md-8">{{One.realname}}</div>
                  </div>

                   <div class="row">
                    <div class="col-lg-3 col-md-4 label ">About me</div>
                    <div class="col-lg-9 col-md-8">{{One.about}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Country</div>
                    <div class="col-lg-9 col-md-8">{{One.country}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Phone</div>
                    <div class="col-lg-9 col-md-8">{{One.phone}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    <div class="col-lg-9 col-md-8">{{One.email}}</div>
                  </div>
    </div>
    <div class="tab-pane fade profile-man" id="profile-man">
         <form action="" method="post" enctype="multipart/form-data">
        <div class="row mb-3">
                      <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                      <div class="col-md-8 col-lg-9">
                        <div class="pt-2">
                          <input name="image" class="feedback-input" type="file">      
                          <input class="feedback-input" type="hidden" name="id" value="{{One.id}}"> 
                          <input type="submit" value="SUBMIT"/>               
                        </div>
                      </div>
                    </div>
                    </form>

                    <form action="/account/change" method="post">
                    <div class="row mb-3">
                      <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="realname" type="text" class="form-control" value="{{One.realname}}">
                        <input class="feedback-input" type="hidden" name="id" value="{{One.id}}">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
                      <div class="col-md-8 col-lg-9">
                        <textarea name="about" class="form-control"  style="height: 100px">{{One.about}}</textarea>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Country" class="col-md-4 col-lg-3 col-form-label">Country</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="country" type="text" class="form-control"  value="{{One.country}}">
                      </div>
                    </div>


                    <div class="row mb-3">
                      <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="phone" type="text" class="form-control"  value="{{One.phone}}">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="email" type="email" class="form-control"  value="{{One.email}}">
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                  </form>
    </div>
    </div>
  </div>
</div>